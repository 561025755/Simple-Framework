<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="zh">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    @if (string.IsNullOrEmpty(ViewBag.Title))
    {
        <title>This is test</title>
    }
    else
    {
        <title>@ViewBag.Title - This is test</title>
    }
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    @Styles.Render("~/Content/themes/sean/css/base")
    @Styles.Render("~/Content/themes/sean/font-awesome/css/base")
    @Styles.Render("~/Content/flag/flag-icon")
        @Styles.Render("~/Content/themes/sean/gritter/css/jquery.gritter.css")
    @RenderSection("header", required: false)
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <!-- begin #page-loader -->
    <div id="page-loader">
        <div class="material-loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
            </svg>
            <div class="message">Loading...</div>
        </div>
    </div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="fade page-sidebar-fixed page-header-fixed page-with-wide-sidebar">
        <!-- begin #header -->
        <div id="header" class="header navbar navbar-default navbar-fixed-top">
            <!-- begin container-fluid -->
            <div class="container-fluid">
                <!-- begin mobile sidebar expand / collapse button -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed navbar-toggle-left" data-click="sidebar-minify">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("This is testing", "Index", null, new { @class = "navbar-brand" })
                </div>
                <!-- end mobile sidebar expand / collapse button -->


                <!-- begin header navigation right -->
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="icon notification waves-effect waves-light" data-toggle="dropdown">
                            <span class="flag-icon flag-icon-cn" title="cn"></span>
                            <span class="name">中文</span> <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu media-list pull-right animated fadeInDown">
                            <li class="arrow"></li>
                            <li><a href="/en-us"><span class="flag-icon flag-icon-us" title="us"></span> English</a></li>
                            <li><a href="/zh-cn"><span class="flag-icon flag-icon-cn" title="cn"></span> 简体中文</a></li>
                            <li class="divider m-b-0"></li>
                        </ul>
                    </li>
                    <li class="dropdown navbar-user">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="~/Content/themes/sean/img/user.jpg" alt="" />
                            <span class="hidden-xs">test@163.com</span>
                        </a>
                        <ul class="dropdown-menu animated fadeInLeft">
                            <li class="arrow"></li>
                            <li>@Html.ActionLink("修改密码", "ChangePassword", "UserInfo")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("编辑个人资料", "ChangeUserInfo", "UserInfo")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("注销当前登录", "Logout", "Account")</li>
                        </ul>
                    </li>
                </ul>
                <!-- end header navigation right -->
            </div>
            <!-- end container-fluid -->
        </div>
        <!-- end #header -->
        <!-- begin #sidebar -->
        <div id="sidebar" class="sidebar">
            <!-- begin sidebar scrollbar -->
            <div data-scrollbar="true" data-height="100%">
                <!-- begin sidebar user -->
                <ul class="nav">
                    <li class="nav-profile">
                        <div class="info row">
                            <div class="col-sm-4"><i class="fa  fa-desktop fa-3x"></i></div><div class="col-sm-8"> -------- <small>0.0</small></div>
                        </div>
                    </li>
                </ul>
                <!-- end sidebar user -->
                <!-- begin sidebar nav -->
                <ul class="nav">
                    <li class="nav-header">功能导航</li>
                    @Html.Partial("_AdminMenu")
                    <!-- begin sidebar minify button -->
                    <li><a href="javascript:;" class="sidebar-minify-btn" data-click="sidebar-minify"><i class="fa fa-angle-double-left"></i></a></li>
                    <!-- end sidebar minify button -->
                </ul>
                <!-- end sidebar nav -->
            </div>
            <!-- end sidebar scrollbar -->
        </div>
        <div class="sidebar-bg"></div>
        <!-- end #sidebar -->
        <!-- begin #content -->
        <div class="content" id="content">
            <!-- begin page-header -->

            <h1 class="page-header">
                @RenderSection("PageTitle", required: false)
            </h1><!-- end page-header -->
            @Html.Partial("_Notifications")
            <!-- begin row -->
            @RenderBody()
            <!-- end row -->
        </div>
        <!-- end #content -->
        <!-- begin scroll to top btn -->
        <a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"><i class="fa fa-angle-up"></i></a>
        <!-- end scroll to top btn -->
    </div>

    <div id="TokenInput">
        @Html.Partial("_ViewToken")
    </div>
    <div class="loading-overlay fade in">
        <span class="spinner"></span>
    </div>
    <!-- end page container -->
    <!--[if lt IE 9]>
    @Scripts.Render("~/bundles/themes/sean/crossbrowserjs")
    <![endif]-->
    @Scripts.Render("~/bundles/themes/sean/base")
    @Scripts.Render("~/bundles/themes/sean/apps")
    @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/Content/themes/sean/gritter/js/jquery.gritter.js")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
            $('.active').parent().parent().filter('li').addClass('active');
            $('form').append($("#TokenInput").html());
        })
        function gritter(title, content) {
            if ($.gritter) {
                $.gritter.add({ title: title, text: content });
            }
        }
    </script>
  
</body>
</html>
