@model MSP.Models.Domain.UserModel

@{
    ViewBag.Title = "修改我的资料";
}
@section PageTitle{
    修改我的资料
}

<div class="row">


    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">创建表单</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.UserName)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @readonly = "true" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.Email)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "true" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(model => model.Mobile)
                            </label>
                            <div>
                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Mobile)
                            </div>
                        </div>

                        <input type="submit" class="btn btn-sm btn-success" value="确认" />
                        <input type="reset" class="btn btn-sm btn-default" value="重置" />
                }
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>