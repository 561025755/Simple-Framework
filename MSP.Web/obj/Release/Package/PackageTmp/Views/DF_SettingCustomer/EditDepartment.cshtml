@model MSP.Core.Domain.Cus_Customerapprovaldepartment

@{
    ViewBag.Title = "编辑客户审批部门";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle{
    编辑客户审批部门 <small>点击 @Html.ActionLink("这里", "Index") 回到列表</small>
}


<!-- begin col-12 -->
<div class="col-md-12 ui-sortable">
    <!-- begin panel -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">编辑表单</h4>
        </div>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label>
                        @Html.Label("部门名称")
                    </label>
                    <div>
                        @Html.TextBoxFor(model => model.DepartmentName, new { @class="form-control"})
                        @Html.ValidationMessageFor(model => model.DepartmentName)
                    </div>
                </div>







                <input type="submit" class="btn btn-sm btn-success" value="保存" />
                <input type="reset" class="btn btn-sm btn-default" value="重置" />
            }
        </div>
    </div>
    <!-- end panel -->
</div>
<!-- end col-12 -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
