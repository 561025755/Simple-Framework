@using MSP.Web;

@model MSP.Models.Domain.SecuritySettingsModel

@{
    ViewBag.Title = "编辑安全设置";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle{
    编辑安全设置 <small>点击 @Html.ActionLink("这里", "Index") 回到列表</small>
}

<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">编辑表单</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.EncryptionKey)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.EncryptionKey, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EncryptionKey)
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.ForceSslForAllPages) @Html.LabelFor(model => model.ForceSslForAllPages)
                        </label>
                    </div>


                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.AdminAreaAllowedIpAddresses)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.AdminAreaAllowedIpAddresses, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AdminAreaAllowedIpAddresses)
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.CaptchaEnabled) @Html.LabelFor(model => model.CaptchaEnabled)
                        </label>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.ShowOnLoginPage) @Html.LabelFor(model => model.ShowOnLoginPage)
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.ShowOnRegistrationPage) @Html.LabelFor(model => model.ShowOnRegistrationPage)
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.ShowOnContactUsPage) @Html.LabelFor(model => model.ShowOnContactUsPage)
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.AllowRepeatLogin) @Html.LabelFor(model => model.AllowRepeatLogin)
                        </label>
                    </div>
                    <input type="submit" class="btn btn-sm btn-success" value="保存" />
                    <input type="reset" class="btn btn-sm btn-default" value="重置" />
                }

            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>