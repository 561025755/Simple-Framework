
@model MSP.Models.Domain.OAuth2SettingsModel

@{
    ViewBag.Title = "第三方设置";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle{
    第三方设置 <small>点击 @Html.ActionLink("这里", "Index") 回到列表</small>
}

<div class="row">


    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">编辑表单</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(model => model.WeiXinLoginEnabled) @Html.LabelFor(model => model.WeiXinLoginEnabled)
                        </label>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.WeiXinAppId)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.WeiXinAppId, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.WeiXinAppId)
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.WeiXinAppSecret)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.WeiXinAppSecret, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.WeiXinAppSecret)
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.WeiXinStateToken)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.WeiXinStateToken, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.WeiXinStateToken)
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.WeiXinCallback)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.WeiXinCallback, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.WeiXinCallback)
                        </div>
                    </div>

                    <input type="submit" class="btn btn-sm btn-success" value="保存" />
                    <input type="reset" class="btn btn-sm btn-default" value="重置" />
                }

            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>