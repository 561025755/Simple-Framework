@model MSP.Core.Domain.Cus_Customer

@using (Html.BeginForm( FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-6">
            @Html.DropDownListFor(model => model.Status, new SelectList((IEnumerable<SelectListItem>)ViewData["FilingStatus"], "Value", "Text"),"状态", new { @class = "form-control" })
        </div>
        <div class="col-sm-6">
            <div class="input-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "名称" })
                <div class="input-group-btn">
                    <input type="submit" class="btn btn-inverse" value="搜索" />
                </div>
            </div>
        </div>
    </div>
}



    
