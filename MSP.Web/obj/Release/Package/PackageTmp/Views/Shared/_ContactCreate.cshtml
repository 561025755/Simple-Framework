@using MSP.Core.Enum;
@using MSP.Web;

@model MSP.Models.Domain.ContactModel

@{
    ViewBag.Title = "创建联系人";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle{
    创建联系人 <small>点击 @Html.ActionLink("这里", "Index") 回到列表</small>
}

<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">创建表单</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.Name)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.Name, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.CustomerId)
                                </label>
                                <div>
                                    @Html.DropDownListFor(model => model.CustomerId, (ViewData["CustomerId"] as SelectList), "选择一个选项", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CustomerId)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.Business)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.Business, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.Business)
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.Department)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.Department, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.Department)
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.QQ)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.QQ, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.QQ)
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.WebChat)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.WebChat, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.WebChat)
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.Phone)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.Phone, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.Phone)
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.Email)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.Email, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.Fax)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.Fax, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.Fax)
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label>
                                    @Html.LabelFor(model => model.Mobile)
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.Mobile, new{@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.Mobile)
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.Address)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.Address, new{@class="form-control"})
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.LabelFor(model => model.Description)
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.Description, new{@class="form-control"})
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <input type="submit" class="btn btn-sm btn-success" value="创建" />
                    <input type="reset" class="btn btn-sm btn-default" value="重置" />
            }
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
