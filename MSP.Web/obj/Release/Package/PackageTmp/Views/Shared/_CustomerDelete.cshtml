
@using MSP.Web;
@using MSP.FrameWork.UI.Grid;
@using MSP.FrameWork.UI.Pager;
@using MSP.Core.Domain;
@using MSP.Core.Pagination;
@using MSP.Core.Sorting;
@using MSP.Models.Domain;
@model MSP.Models.Domain.AttachModel<Cus_Contact, CustomerModel>

    @{
        ViewBag.Title = "删除客户";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @section PageTitle{
        删除客户 <small>点击 @Html.ActionLink("这里", "Index") 回到列表</small>
    }

<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-danger">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">您确认要删除该条目？</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="row">

                        <div class="col-sm-3">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.Name)
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.Name)
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.Remark)
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.Remark)
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.OrgCode)
                                @*@Html.DisplayNameFor(model => model.Model.CustomerGrade)*@
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.OrgCode)
                                @*@if (Model.Model.CustomerGrade == 2)
                                    {
                                        <span class="label label-danger" data-toggle="tooltip" data-placement="right" data-original-title="重要客户">重要客户</span>
                                    }
                                    else if (Model.Model.CustomerGrade == 3)
                                    {
                                        <span class="label label-inverse" data-toggle="tooltip" data-placement="right" data-original-title="签约客户">签约客户</span>
                                    }
                                    else
                                    {
                                        <span class="label label-default" data-toggle="tooltip" data-placement="right" data-original-title="潜在客户">潜在客户</span>
                                    }*@
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.Phone)
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.Phone)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.Fax)
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.Fax)
                            </div>

                        </div>

                        <div class="col-sm-3">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.Address)
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.Address)
                            </div>

                        </div>

                        <div class="col-sm-3">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.CreateTime)
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.CreateTime)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-12">
                            <label>
                                @Html.DisplayNameFor(model => model.Model.Description)
                            </label>
                            <div>
                                @Html.DisplayFor(model => model.Model.Description)
                            </div>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">

                        <h4 class="col-sm-2">联系人列表</h4>
                    </div>
                </div>
            </div>

           

            <div class="table-responsive">
                
                
                @Html.Grid(Model.PageModel).Sort(ViewData["sort"] as GridSortOptions).Columns(column =>
                    {
                        column.For(c => c.Name).Named("名称");
                        column.For(c => c.Business).Named("职务");
                        column.For(c => c.Department).Named("部门");
                        column.For(c => c.Phone).Named("固定电话");
                        column.For(c => c.Email).Named("邮箱");
                        column.For(c => c.CreateTime).Named("创建时间");
                    }).Attributes(@class => "table table-email")
            </div>
            @Html.Raw(@Html.Pager(Model.PageModel))


            <div></div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Model.Name)
                <input type="submit" class="btn btn-sm btn-danger" value="删除" />
            }

        </div>
    </div>
    <!-- end panel -->
    </div>
    <!-- end col-12 -->

