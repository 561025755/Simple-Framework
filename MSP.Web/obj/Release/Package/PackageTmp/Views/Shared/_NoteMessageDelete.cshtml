
@using MSP.Models.Domain

@model NoteMessageModel

@{
    ViewBag.Title = "通知消息详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
<style>
    div, img, p, form, table, th, td, ul, ol, li, dl, dt, dd, h1, h2, h3, h4, h5, h6 {
        margin: 0;
        padding: 0;
        border: 0;
    }

    img {
        max-width: 100% !important;
    }

    #con_news_c_title {
        margin-bottom: 20px;
        text-align: center;
        border-bottom: 1px dashed #CCCCCC;
    }

    h2 {
        display: block;
        font-size: 1.5em;
        -webkit-margin-before: 0.83em;
        -webkit-margin-after: 0.83em;
        -webkit-margin-start: 0px;
        -webkit-margin-end: 0px;
        font-weight: bold;
    }

    #con_news_c_title h3 {
        font-size: 12px;
        font-weight: normal;
        color: #989898;
    }
</style>
   
}

@section PageTitle{

    通知消息详情 <small>点击 @Html.ActionLink("这里", "Index") 回到通知列表</small>
}




<div class="col-md-12 ui-sortable">
    <!-- begin panel -->
    <div class="panel panel-danger">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">您确认要删除该条目？</h4>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label>
                    标题
                </label>
                <div>
                    @Model.Title
                </div>
            </div>
            <div class="form-group">
                <label>
                    发布时间
                </label>
                <div>
                    @Model.CreateTime
                </div>
            </div>

            <div class="form-group">
                <label>
                    分类
                </label>
                <div>
                    @Model.TypeName
                </div>
            </div>
            <div class="form-group">
                <label>
                    发布人
                </label>
                <div>
                    @Model.UserName
                </div>
            </div>
            @Html.HiddenFor(model => model.Id)
            <input type="hidden" id="current-controller" value="@ViewContext.RouteData.Values["controller"]" />
            <input type="button" class="btn btn-success" value="提交" onclick="submit()" />
        </div>
    </div>
    <!-- end panel -->
</div>
@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

      
            function submit() {
                $.post("/NoteMessageBase/Deleted", { Id: $("#Id").val() }, function (data) {
                    if (data.success) {
                        location.href = "/" + $("#current-controller").val();
                    } else {
                        $("#alert_msg").text(data.msg);
                        $("#modal-alert").modal('show');
                    }
                });

            }
            function cancel() {
                location.href = "/" + $("#current-controller").val();
            }
    </script>
}
