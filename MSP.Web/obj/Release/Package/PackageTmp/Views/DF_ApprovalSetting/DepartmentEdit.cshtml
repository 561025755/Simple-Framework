@using MSP.Core.Enum;
@model MSP.Core.Domain.Sys_Approvaldepartment

@{
    ViewBag.Title = "编辑审批部门";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle{
    编辑审批部门 <small>点击 @Html.ActionLink("这里", "Index") 回到列表</small>
}

<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">编辑表单</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label>
                            @Html.Label("部门名称")
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.Name,new { @class="form-control"})
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.Label("类型")
                        </label>
                        <div>
                            @Html.TextBox("Type2", ((ApprovalDepartmentType)Enum.Parse(typeof(ApprovalDepartmentType), Model.Type.ToString())).GetText(), new { @class = "form-control",@readonly="readonly" })
                            @Html.HiddenFor(model => model.Type)
                        </div>
                    </div>

                    <input type="submit" class="btn btn-sm btn-success" value="保存" />
                    <input type="reset" class="btn btn-sm btn-default" value="重置" />
            }
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
