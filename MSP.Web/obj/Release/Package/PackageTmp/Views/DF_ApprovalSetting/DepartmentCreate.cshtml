@model MSP.Core.Domain.Sys_Approvaldepartment

@{
    ViewBag.Title = "创建审批部门";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle{
    创建审批部门 <small>点击 @Html.ActionLink("这里", "Index") 回到列表</small>
}

<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">创建表单</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    <div class="form-group">
                        <label>
                            @Html.Label("部门名称")
                        </label>
                        <div>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.Label("类型")
                        </label>
                        <div>

                            @Html.DropDownListFor(model=>model.Type, ViewData["DepartmentType"] as SelectList,new { @class="form-control"})
                        </div>
                    </div>


                    <input type="submit" class="btn btn-sm btn-success" value="创建" />
                    <input type="reset" class="btn btn-sm btn-default" value="重置" />
            }
            </div>
        </div>
        <!-- end panel -->
    </div>
</div>

<!-- end col-12 -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
