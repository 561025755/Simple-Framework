@using MSP.Models.Domain

@model DF_PriceDiscountModel
@{
    ViewBag.Title = "编辑东方天呈折扣";
}

@section Pagetitle{
    编辑东方天呈折扣 <small>点击 @Html.ActionLink("这里", "Discount") 返回列表</small>
}

<div class="row col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">编辑表单</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="row p-b-15">
                    <div class="col-md-2">
                        @Html.DropDownListFor(m => m.CityGrade, ViewData["CityGrade"] as SelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(m => m.DeliverySeconds, ViewData["DeliverySeconds"] as SelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.TotalHours, new { @class = "form-control", @placeholder = "总时长" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.Discount, new { @class = "form-control", @placeholder = "折扣" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control", @placeholder = "单价" })
                    </div>
                </div>
                <input type="submit" class="btn btn-sm btn-success" value="保存" />
                <input type="reset" class="btn btn-sm btn-default" value="重置" />
            }

        </div>
    </div>
</div>
